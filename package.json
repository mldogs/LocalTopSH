{
  "name": "agent",
  "version": "1.0.0",
  "type": "module",
  "scripts": {
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "gateway": "tsx src/index.ts gateway",
    "typecheck": "tsc --noEmit",
    "test:security": "node --test dist/tests/security-regression.test.js",
    "build:tests": "tsc -p tsconfig.tests.json && mkdir -p dist/approvals && cp src/approvals/blocked-patterns.json dist/approvals/blocked-patterns.json",
    "verify:release": "npm run typecheck && npm run build:tests && npm run test:security",
    "docker:up": "docker compose up -d --build",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f"
  },
  "dependencies": {
    "@tavily/core": "^0.5.0",
    "better-sqlite3": "^12.6.2",
    "dotenv": "^16.4.5",
    "fast-glob": "^3.3.3",
    "openai": "^4.77.0",
    "telegraf": "^4.16.3"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^22.10.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.0"
  }
}
